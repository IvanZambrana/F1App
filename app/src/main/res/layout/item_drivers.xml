<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewContainer"
    android:layout_width="250dp"
    android:layout_height="220dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="16dp"
    app:cardBackgroundColor="@color/f1third"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgDriver"
                android:layout_width="150dp"
                android:layout_height="150dp"
                tools:src="@drawable/feralo01" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="142dp"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgDriverFlag"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="20dp"
                    tools:src="@drawable/spain" />

                <TextView
                    android:id="@+id/tvDriverNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/formula1wide"
                    tools:text="14"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/driverDivider"
                    android:layout_width="70dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    tools:background="@color/astonmartin" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/driverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/formula1bold"
            tools:text="fernando"
            android:textAllCaps="true"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/driverSName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/formula1wide"
            tools:text="alonso"
            android:textAllCaps="true"
            android:textColor="@color/white" />


    </LinearLayout>

</androidx.cardview.widget.CardView>